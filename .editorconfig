# editorconfig.org

root = true

[*]
end_of_line = lf
charset = utf-8
trim_trailing_whitespace = true
insert_final_newline = true
indent_style = tab
indent_size = 4

[*.{md,txt}]
indent_style = space
trim_trailing_whitespace = false

[Makefile]
indent_style = tab

[CNAME]
trim_trailing_whitespace = false
insert_final_newline = false
